@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@(Html.DevExtreme().DataGrid<Weather_Forecast_App.Models.Weather.Weather>()
    .DataSource(ds => ds.Mvc()
        .Controller("WeatherController")
        .LoadAction("Index")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.TemparatureInCelcius);

        columns.AddFor(m => m.WindSpeed);

        columns.AddFor(m => m.Humidity);

        columns.AddFor(m => m.IsDayOrNight);

        columns.AddFor(m => m.Condition);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
